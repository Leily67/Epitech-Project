<%= button_to 'Créer ton personnage', new_joueur_path, method: :get, class: 'button-create'%>
<h1>Liste de tes personnages</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Niveau</th>
      <th>Force</th>
      <th>Vie</th>
      <th>XP</th>
      <th>Mort</th>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @joueurs.each do |joueur| %>
      <tr>
        <td><%= joueur.name %></td>
        <td><%= joueur.niveau %></td>
        <td><%= joueur.force %></td>
        <td><%= joueur.vie %></td>
        <td><%= joueur.xp %></td>
        <td><%= joueur.mort %></td>
        <td><%= joueur.points %></td>
        <td><%= button_to 'Afficher', joueur, method: :get %></td>
        <td><%= button_to 'Supprimer', joueur, method: :delete %></td>
        <td><%= button_to 'Débuter une quête', start_quest_joueur_path(joueur), method: :get, class: 'button-create'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
